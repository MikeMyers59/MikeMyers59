<H2 color="red">Websites</H2> 
<SPAN id="xmlList" name="xmlList"></SPAN>

<HR>
<SCRIPT language=VBScript>
  set xmlDoc = CreateObject( "Msxml2.DOMDocument.3.0" )
  strBreak = "<BR>"
  xmlDoc.Async = "False"
  xmlDoc.Load( "Websites.xml" )
'  MsgBox "XML File Loaded: " & vbCrLf & xmlDoc.xml & VbCrLf & "End of File"
  Set Root = xmlDoc.documentElement 
  nodeList = Root.getElementsByTagName("Website") 
  nodeCount = 0
  strMessage = "<TABLE border=thin cellpadding=3px><TH colspan=4>These are the tracked Websites:</TH><TR>" & _
               "<B><TD>Website</TD><TD>Last Access</TD><TD>Notes</TD><TD>Update</TD></B></TR>"
  For Each Elem In nodeList 
    nodeCount = nodeCount + 1
    strMessage = strMessage & "<TR><TD><A href='https://" & Elem.childNodes(1).text & "/' target='_blank'>" &_
                 Elem.childNodes(0).text & "</A></TD>"
    strMessage = strMessage & "<TD>" & Elem.childNodes(2).text & "</TD>" 
    strMessage = strMessage & "<TD>" & Elem.childNodes(3).text & "</TD>"
    strMessage = strMessage & "<TD>" & "Update?" & "</TD></TR><BR>"
  Next
  strMessage = strMessage + "</TABLE>"
'  MsgBox strMessage
  document.getElementById("xmlList").innerHTML = strMessage 
'  MsgBox "Count =" & nodeCount
</SCRIPT>


