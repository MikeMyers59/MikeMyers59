<html>
<head>
  <HTA: APPLICATION>
  <title>Payment Calculator</title>
</head> 
<body> 
  <form name="frmInput"> 
    Loan Amount<br> <input type="text" name="txtAmount" size="12"> <br> 
    Term (Months) <br> <input type="text" name="txtTerm" size="12"> <br> 
    Interest Rate <br> <input type="text" name="txtRate" size="12"> <br> <br> 
    <input type="button" value="Calculate Payment" name="btnCalculate" onclick="calcPayment()â€> 
    <input type="text" name="txtPmt" size="12"> 
  </form> 
  <SCRIPT type="text/javascript"> 
    function calcPayment() { 
      varAmount = document.frmInput.txtAmount.value; 
      varTerm = document.frmInput.txtTerm.value; 
      varRate = document.frmInput.txtRate.value; 
      varAdjRate = (varRate/12)/100; 
      varNumCalc =varAdjRate* Math.pow((1+varAdjRate),varTerm); 
      varDenomCalc= Math.pow((1+varAdjRate),varTerm)-1; 
      varPayment = (varAmount*varNumCalc/varDenomCalc).toFixed(2); 
      document.frmInput.txtPmt.value = "$"+varPayment; 
    } 
  </SCRIPT> 
</body>
</html>