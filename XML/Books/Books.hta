<!-- Script for Date Display -->
<SCRIPT text="text/javascript">
  var monthNames = new Array("January", "February", "March", "April", "May", "June", "July", 
                             "August", "September", "October", "November", "December"); 
  var dayNames = new Array("Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday");
  var now = new Date();
  document.writeln(dayNames[now.getDay()] + ", " +monthNames[now.getMonth()] + " " + now.getDate() + ", " + (now.getYear()));
  var amorpm = (now.getHours() >= 0) && (now.getHours() <= 11) ? "AM" : "PM";
  var hours = (now.getHours() == 0) ? 12 : (now.getHours() > 12 ? (now.getHours() - 12) : now.getHours());
  var minutes = now.getMinutes() < 10 ? "0" + now.getMinutes() : "" + now.getMinutes()    
  document.write(" " + hours + ":" + minutes + " " + amorpm);
</SCRIPT>

<HR>

<H3>List of Books:</H3>
<p id="demo">

<!-- Script for Playing with XML -->
<script language=VBScript>
  Set xmlDoc = CreateObject("msxml2.DOMDocument.6.0")
  xmlDoc.async = false
  xmlDoc.load "books.xml"                              ' Load the XML Data File
  Set xmlDocRoot = xmlDoc.childNodes(1)
  Set xmlDocRecord = xmlDocRoot.childNodes(1)
  Set xmlDocList = xmlDoc.getElementsByTagName("book")   ' Set the Root for the Record Set
  count = 0
  txtOutput = ""
  for each Elem in xmlDocList
    count = count + 1
    txtOutput = txtOutput & "<B>Book(" & count & "): </B>" & Elem.childNodes(1).text & " - "
    txtOutput = txtOutput & "By: " & Elem.childNodes(0).text & "<br>"
    txtOutput = txtOutput & "Genre: " & Elem.childNodes(2).text & " - "
    txtOutput = txtOutput & "Price: " & Elem.childNodes(3).text & "<br>"
    txtOutput = txtOutput & "Review: " & Elem.childNodes(4).text & "<br><hr>"
  next
  document.write txtOutput  ' Outputs directly to the HTML document
'  MsgBox txtOutput  
</script>
</p>

